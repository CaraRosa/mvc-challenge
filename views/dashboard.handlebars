<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{pageTitle}}</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <header>
        <nav>
            <a href="/home">Home</a>
      <a href="/dashboard">Dashboard</a>
      {{#if logged_in}}
        <a href="/logout" id="logoutButton">Log Out</a>
      {{else}}
        <a href="/login">Login</a>
      {{/if}}
        </nav>
        <h1>{{pageTitle}}</h1>
    </header>

    <main class="container container-fluid mt-5">
        <section>
            <h2>Your Blog Posts</h2>

            {{#each userPosts}}
                <article>
                    <h3>{{this.title}}</h3>
                    <p>{{this.content}}</p>
                    <p>Date: {{this.date}}</p>
                    
                    {{!-- Options to Update and Delete posts --}}
                    <a href="/updatePost/{{this._id}}">Update Post</a>
                    <a href="/deletePost/{{this._id}}">Delete Post</a>
                </article>
                {{/each}}
        </section>

    </main>

    <footer>

    </footer>
    <script src="/public/js/logout.js"></script>
</body>